{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "out-tsc/tsconfig.tsbuildinfo",
    "jsx": "preserve",
    "jsxImportSource": "@alloy-js/core",
    "lib": ["esnext", "DOM"],
    "types": ["node"],
    "outDir": "./out-tsc"
  },
  "references": [
    { "path": "../plugin-upgrade/tsconfig.lib.json" },
    { "path": "../preset-script/tsconfig.lib.json" },
    { "path": "../plugin-theme/tsconfig.lib.json" },
    { "path": "../core/tsconfig.lib.json" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "powerlines.config.ts",
    "powerlines.d.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
