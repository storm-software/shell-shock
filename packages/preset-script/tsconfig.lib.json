{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "out-tsc/tsconfig.tsbuildinfo",
    "jsx": "preserve",
    "jsxImportSource": "@alloy-js/core",
    "types": ["node"],
    "outDir": "./out-tsc",
    "sourceMap": true
  },
  "references": [
    { "path": "../plugin-console/tsconfig.lib.json" },
    { "path": "../plugin-theme/tsconfig.lib.json" },
    { "path": "../core/tsconfig.lib.json" }
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "powerlines.config.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
