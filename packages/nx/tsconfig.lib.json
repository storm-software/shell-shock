{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "types": ["node"],
    "outDir": "./dist"
  },
  "references": [
    {
      "path": "../core/tsconfig.lib.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "powerlines.config.ts",
    "**/*.json"
  ],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/untyped.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
