{
  "id": "#",
  "title": "Clean Executor",
  "description": "A type definition for the Powerlines - Clean executor schema",
  "required": [],
  "properties": {
    "outputPath": {
      "title": "Output Path",
      "type": "string",
      "format": "path",
      "description": "The output path for the build",
      "id": "#outputPath",
      "default": "dist/{projectRoot}"
    },
    "tsconfig": {
      "title": "TypeScript Configuration File",
      "type": "string",
      "format": "path",
      "description": "The path to the tsconfig file",
      "id": "#tsconfig"
    },
    "configFile": {
      "title": "Shell Shock Configuration File",
      "type": "string",
      "format": "path",
      "description": "The path to the Shell Shock configuration file",
      "id": "#configFile",
      "default": "{projectRoot}/shell-shock.config.ts"
    },
    "mode": {
      "title": "Mode",
      "type": "string",
      "description": "The build mode",
      "enum": ["development", "test", "production"],
      "id": "#mode"
    },
    "autoInstall": {
      "title": "Auto Install",
      "type": "boolean",
      "description": "Automatically install dependencies before building",
      "id": "#autoInstall"
    },
    "skipCache": {
      "title": "Skip Cache",
      "type": "boolean",
      "description": "Skip the cache when building",
      "id": "#skipCache"
    },
    "logLevel": {
      "title": "Log Level",
      "type": "string",
      "description": "The log level to use for the build process",
      "enum": [
        "fatal",
        "error",
        "warn",
        "success",
        "info",
        "debug",
        "trace",
        "silent"
      ],
      "id": "#logLevel"
    },
    "entry": {
      "title": "Entry Path(s)",
      "description": "The entry path(s) for the package",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "id": "#entry",
      "type": "any",
      "default": {}
    }
  },
  "type": "object",
  "default": {
    "outputPath": "dist/{projectRoot}",
    "configFile": "{projectRoot}/shell-shock.config.ts",
    "entry": {}
  }
}
