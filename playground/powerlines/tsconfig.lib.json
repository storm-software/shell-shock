{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "out-tsc/tsconfig.tsbuildinfo",
    "outDir": "./out-tsc",
    "jsx": "preserve",
    "jsxImportSource": "@alloy-js/core"
  },
  "references": [
    { "path": "../../packages/preset-script/tsconfig.lib.json" },
    { "path": "../../packages/core/tsconfig.lib.json" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "powerlines.config.ts",
    "powerlines.d.ts",
    "shell-shock.d.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "reflection": "default",
  "reflectionLevel": "minimal"
}
