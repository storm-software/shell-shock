{
  "name": "playground-powerlines",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "playground/powerlines/src",
  "targets": {
    "clean": {
      "cache": false,
      "executor": "@powerlines/nx:clean"
    },
    "prepare": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/.powerlines"],
      "executor": "@powerlines/nx:prepare",
      "dependsOn": ["^build"],
      "options": {
        "mode": "development"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{options.outputPath}"],
      "executor": "@powerlines/nx:build",
      "dependsOn": ["prepare"],
      "options": {
        "mode": "development"
      }
    },
    "docs": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/docs"],
      "executor": "@powerlines/nx:docs",
      "dependsOn": ["prepare", "build"]
    }
  }
}
